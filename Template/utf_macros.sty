\newif\ifcoorientacao
\newcommand{\temCoorientacao}[1]
{
	\ifthenelse{\equal{#1}{S}}{\coorientacaotrue}{}
	\ifthenelse{\equal{#1}{N}}{\coorientacaofalse}{}
}

% Ajuste na capa
\renewcommand{\imprimircapa}
{
	\begin{capa}%
		\begin{center}
			{\linespread{1.0}
				\fontsize{12pt}{12pt}\selectfont
				\large\MakeUppercase{\Universidade}\\
				\large\MakeUppercase{\Programa}\par	
			}
		\end{center}		
		\vspace{14pt}	
		\begin{center}
			{\linespread{1.0}
				\large\MakeUppercase{\imprimirautor}\\
			}
		\end{center}
		\vspace*{\fill}
		\begin{center}
			{\linespread{1.0}
				\begingroup
				\fontsize{18pt}{18pt}\selectfont
				\textbf{\MakeUppercase\TituloCapa} \par  
				\endgroup
			}
		\end{center}
		\vspace*{\fill}
		\vspace{12pt}
		\begin{center}
			\large\MakeUppercase{\imprimirtipotrabalho}%
		\end{center}
		\vfill
		\begin{center}
			\textbf{\MakeUppercase{\imprimirlocal}}\par
			\textbf{\imprimirdata}
		\end{center}
	\end{capa}
}

